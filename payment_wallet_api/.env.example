# API Configuration
HOST=0.0.0.0
PORT=8016
DEBUG=false
RELOAD=false

# Database Configuration
DATABASE_URL=sqlite:///payment_wallet.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30
DATABASE_ECHO=false
ENABLE_DATABASE_BACKUP=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
PIN_HASH_ITERATIONS=100000
SESSION_TOKEN_LENGTH=32
ENABLE_SESSION_MANAGEMENT=true
SESSION_CLEANUP_INTERVAL=3600

# Transaction Limits
DEFAULT_DAILY_LIMIT=1000.0
DEFAULT_MONTHLY_LIMIT=10000.0
MAX_TRANSACTION_AMOUNT=10000.0
MIN_TRANSACTION_AMOUNT=0.01
MAX_WALLETS_PER_USER=10
MAX_PIN_ATTEMPTS=3
PIN_LOCKOUT_DURATION=900

# Fee Configuration
TRANSFER_FEE_PERCENTAGE=0.002
MIN_TRANSFER_FEE=0.5
MAX_TRANSFER_FEE=100.0
ENABLE_DYNAMIC_FEES=false
FEE_TIER_THRESHOLDS=100,1000,5000
FEE_TIER_PERCENTAGES=0.003,0.002,0.0015,0.001

# Currency Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CAD,AUD,CHF,CNY
ENABLE_CURRENCY_CONVERSION=false
CURRENCY_API_KEY=your-currency-api-key
CURRENCY_UPDATE_INTERVAL=3600

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_RETRIES=3
RATE_LIMIT_STORAGE=memory
RATE_LIMIT_STRATEGY=fixed-window

# Authentication
ENABLE_JWT_AUTH=true
ENABLE_OAUTH=false
OAUTH_PROVIDERS=google,facebook,apple
ENABLE_MULTI_FACTOR_AUTH=false
MFA_ISSUER=PaymentWallet
ENABLE_BIOMETRIC_AUTH=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/wallet_api.log
LOG_ROTATION=daily
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_TRANSACTIONS=true
LOG_SECURITY_EVENTS=true
LOG_PERFORMANCE=true
LOG_ERRORS=true
LOG_API_CALLS=false

# Performance
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
ENABLE_CACHING=true
CACHE_TTL=3600
CACHE_STORAGE=memory
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_REQUEST_TIMEOUT=true
REQUEST_TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8017
HEALTH_CHECK_INTERVAL=30
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_MONITORING=true
ENABLE_FINANCIAL_MONITORING=true
ALERT_THRESHOLDS=failed_logins=10,large_transactions=5000

# Security Headers
ENABLE_SECURITY_HEADERS=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
STRICT_TRANSPORT_SECURITY=max-age=31536000
CONTENT_SECURITY_POLICY=default-src 'self'

# SSL/TLS Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_VERSION=TLSv1.2
FORCE_HTTPS=false

# CORS Configuration
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Email Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@paymentwallet.com
EMAIL_TEMPLATES_PATH=./templates

# SMS Configuration
ENABLE_SMS_NOTIFICATIONS=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=false
PUSH_PROVIDER=firebase
FIREBASE_SERVER_KEY=your-firebase-key
FIREBASE_CONFIG_PATH=./firebase-config.json

# Webhooks
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_EVENTS=transaction,login,logout,limit_reached

# File Storage
ENABLE_FILE_STORAGE=false
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=wallet-files

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# Database Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Transaction Processing
ENABLE_ASYNC_TRANSACTIONS=true
TRANSACTION_QUEUE_SIZE=1000
TRANSACTION_WORKERS=4
TRANSACTION_TIMEOUT=60
ENABLE_TRANSACTION_RETRY=true
MAX_RETRY_ATTEMPTS=3

# Compliance and Regulation
ENABLE_COMPLIANCE_CHECKS=false
KYC_REQUIRED=false
AML_MONITORING=false
REPORTING_THRESHOLD=10000.0
DATA_RETENTION_DAYS=2555  # 7 years
ENABLE_AUDIT_LOG=true

# Backup and Recovery
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_STORAGE=local
BACKUP_ENCRYPTION=false
BACKUP_COMPRESSION=true
BACKUP_RETENTION_COPIES=30

# Development and Testing
TEST_MODE=false
TEST_DATABASE_URL=test_payment_wallet.db
ENABLE_MOCK_PAYMENTS=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_PROFILING=false
ENABLE_STRESS_TESTING=false
MOCK_EXTERNAL_APIS=false

# API Versioning
ENABLE_API_VERSIONING=true
DEFAULT_API_VERSION=v1
SUPPORTED_VERSIONS=v1,v2
VERSION_HEADER=X-API-Version
ENABLE_VERSION_DEPRECATION=false

# Documentation
ENABLE_DOCS=true
DOCS_URL=/docs
ENABLE_REDOC=true
REDOC_URL=/redoc
DOCS_AUTH_REQUIRED=false
ENABLE_OPENAPI_VALIDATION=true

# Third-party Integrations
ENABLE_STRIPE_INTEGRATION=false
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_
ENABLE_PAYPAL_INTEGRATION=false
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-secret

# Advanced Features
ENABLE_CRYPTO_SUPPORT=false
SUPPORTED_CRYPTOS=BTC,ETH,LTC
ENABLE_QR_PAYMENTS=false
QR_EXPIRY_MINUTES=15
ENABLE_NFC_PAYMENTS=false
ENABLE_VOICE_PAYMENTS=false

# Machine Learning
ENABLE_FRAUD_DETECTION=false
ML_MODEL_PATH=./models/fraud_detection.pkl
ML_CONFIDENCE_THRESHOLD=0.8
ENABLE_SPENDING_PREDICTION=false
ENABLE_PERSONALIZED_OFFERS=false

# Analytics and Reporting
ENABLE_ADVANCED_ANALYTICS=false
DATA_WAREHOUSE_URL=postgresql://analytics:password@localhost/analytics
ENABLE_REAL_TIME_DASHBOARD=false
DASHBOARD_REFRESH_INTERVAL=30
ENABLE_EXPORT_FEATURES=true
EXPORT_FORMATS=CSV,JSON,PDF

# Mobile App Support
ENABLE_MOBILE_API=true
MOBILE_API_VERSION=v1
ENABLE_PUSH_TO_MOBILE=false
FCM_SERVER_KEY=your-fcm-key
ENABLE_MOBILE_OFFLINE_SUPPORT=false

# Enterprise Features
ENABLE_MULTI_TENANT=false
TENANT_ISOLATION=database
ENABLE_ROLE_BASED_ACCESS=false
ENABLE_WORKFLOW_APPROVAL=false
APPROVAL_THRESHOLDS=1000,5000,10000

# Performance Optimization
ENABLE_DATABASE_INDEXING=true
ENABLE_QUERY_OPTIMIZATION=true
ENABLE_CONNECTION_POOLING=true
ENABLE_READ_REPLICA=false
READ_REPLICA_URL=sqlite:///payment_wallet_readonly.db

# Error Handling
ENABLE_GRACEFUL_DEGRADATION=true
ENABLE_CIRCUIT_BREAKER=false
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
ENABLE_CUSTOM_ERROR_PAGES=false

# Internationalization
ENABLE_I18N=false
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,ja,zh
LOCALE_PATH=./locales

# Accessibility
ENABLE_ACCESSIBILITY_FEATURES=false
WCAG_COMPLIANCE_LEVEL=AA
ENABLE_SCREEN_READER_SUPPORT=false

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
EXPERIMENTAL_FEATURES=quantum_payments,blockchain_integration
BETA_FEATURES_ENABLED=false
BETA_USER_WHITELIST=

# Health Checks
ENABLE_DETAILED_HEALTH_CHECK=true
HEALTH_CHECK_DEPENDENCIES=database,redis,external_apis
HEALTH_CHECK_TIMEOUT=10
ENABLE_HEALTH_CHECK_LOGGING=true

# Maintenance
ENABLE_MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1
ENABLE_SCHEDULED_MAINTENANCE=false
MAINTENANCE_SCHEDULE=0 3 * * 0  # Sunday 3 AM
