# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,png,mp4,mp3,zip,txt,csv,xlsx,pptx
ENABLE_VIRUS_SCAN=false

# User Settings
DEFAULT_STORAGE_QUOTA=1073741824
MAX_STORAGE_QUOTA=10737418240
MAX_CONCURRENT_UPLOADS=10

# Security
ENABLE_PASSWORD_PROTECTION=true
SHARE_TOKEN_LENGTH=16
FILE_CHECKSUM_ALGORITHM=sha256
ENABLE_ENCRYPTION=false

# Database (for persistence)
DATABASE_URL=sqlite:///./file_sharing.db
ENABLE_FILE_METADATA_INDEXING=true
BACKUP_INTERVAL_HOURS=24

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true
THUMBNAIL_GENERATION=true

# Logging
LOG_LEVEL=info
ENABLE_UPLOAD_LOGGING=true
FILE_ACCESS_LOG_RETENTION_DAYS=30
ENABLE_SECURITY_LOGGING=true

# External Services
CDN_BASE_URL=
VIRUS_SCAN_API_URL=
EMAIL_SERVICE_URL=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
MAX_DOWNLOADS_PER_HOUR=1000
