# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# Rendering Settings
MAX_RENDER_RESOLUTION=4096
DEFAULT_RENDER_QUALITY=medium
RENDER_TIMEOUT=300
MAX_CONCURRENT_RENDERS=5

# Storage
MODEL_STORAGE_PATH=./models
RENDER_OUTPUT_PATH=./renders
TEMP_UPLOAD_PATH=./temp

# AR Settings
MAX_SESSION_DURATION=3600
ANCHOR_POINT_LIMIT=100
DEFAULT_SESSION_DURATION=1800

# Performance
MODEL_CACHE_SIZE=100
SCENE_CACHE_SIZE=50
MESH_VERTEX_LIMIT=100000

# Database (for persistence)
DATABASE_URL=sqlite:///./ar_vr_rendering.db

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# External Services
CLOUD_STORAGE_PROVIDER=aws
CLOUD_STORAGE_BUCKET=ar-vr-assets
CDN_BASE_URL=https://cdn.example.com
