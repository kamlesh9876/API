# API Keys
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHERBIT_API_KEY=your-weatherbit-api-key
VISUALCROSSING_API_KEY=your-visualcrossing-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Caching
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# Default Settings
DEFAULT_UNITS=celsius
DEFAULT_WIND_UNITS=km/h
DEFAULT_SOURCES=openweather,weatherbit,visualcrossing

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/weather_api.log

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Data Quality
MIN_DATA_SOURCES=1
MAX_DATA_AGE_MINUTES=60
MIN_CONFIDENCE_THRESHOLD=0.6

# Health Monitoring
HEALTH_CHECK_INTERVAL=60
SOURCE_RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_THRESHOLD=5
