# Email Service API Environment Variables

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_TIMEOUT=30

# API Configuration
API_BASE_URL=http://localhost:8000
DEFAULT_FROM_EMAIL=noreply@example.com
DEFAULT_FROM_NAME=Your App
MAX_EMAIL_SIZE=25MB
MAX_ATTACHMENTS=10
MAX_RECIPIENTS_PER_EMAIL=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
RATE_LIMIT_PER_SENDER=1000

# Tracking Configuration
TRACKING_DOMAIN=track.yourdomain.com
OPEN_TRACKING_ENABLED=true
CLICK_TRACKING_ENABLED=true
UNSUBSCRIBE_TRACKING_ENABLED=true
TRACKING_PIXEL_URL=https://track.yourdomain.com/pixel

# Template Configuration
TEMPLATE_CACHE_TTL=3600
MAX_TEMPLATE_SIZE=1MB
SUPPORTED_TEMPLATE_TYPES=html,text,mjml

# Campaign Configuration
MAX_CAMPAIGN_RECIPIENTS=10000
CAMPAIGN_BATCH_SIZE=100
CAMPAIGN_SEND_DELAY=0.1
MAX_CAMPAIGN_DURATION=24

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost/emaildb
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Security
API_KEY_REQUIRED=false
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
WEBHOOK_SECRET=your-webhook-secret
ENCRYPTION_KEY=your-encryption-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/email_service.log
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true

# Background Tasks
MAX_WORKER_THREADS=10
QUEUE_RETENTION_DAYS=30
FAILED_EMAIL_RETENTION_DAYS=7
CLEANUP_INTERVAL_HOURS=1

# External Services
WEBHOOK_URL=http://localhost:8001/webhooks
ANALYTICS_SERVICE_URL=http://localhost:8002
USER_SERVICE_URL=http://localhost:8003

# Compliance
CAN_SPAM_COMPLIANCE=true
GDPR_COMPLIANCE=true
RETENTION_POLICY_DAYS=365
DATA_ANONYMIZATION=true

# Performance
ENABLE_COMPRESSION=true
CACHE_STATIC_CONTENT=true
CONNECTION_POOL_SIZE=20
MAX_CONNECTIONS=100

# Development
DEBUG=false
TEST_MODE=false
MOCK_SMTP=true
ENABLE_SWAGGER_UI=true
