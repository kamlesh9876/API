# TMDB API Configuration
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3
TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p/w500
TMDB_LANGUAGE=en-US
TMDB_INCLUDE_ADULT=false

# API Configuration
HOST=0.0.0.0
PORT=8013
DEBUG=false
RELOAD=false

# Database Configuration
DATABASE_URL=movie_recommendation.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30
DATABASE_ECHO=false

# ML Configuration
TFIDF_MAX_FEATURES=5000
TFIDF_NGRAM_RANGE_MIN=1
TFIDF_NGRAM_RANGE_MAX=2
SIMILARITY_THRESHOLD=0.1
MAX_RECOMMENDATIONS=50
FEATURE_MATRIX_CACHE_TTL=3600

# Caching Configuration
ENABLE_CACHE=true
CACHE_TTL=3600
RECOMMENDATION_CACHE_TTL=1800
TRENDING_CACHE_TTL=900
SEARCH_CACHE_TTL=7200
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_SEARCH=20
RATE_LIMIT_RECOMMENDATIONS=10
RATE_LIMIT_USER_PREFS=30
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/movie_api.log
LOG_ML_OPERATIONS=true
LOG_CACHE_HITS=true
LOG_TMDB_REQUESTS=true
LOG_ROTATION=daily
LOG_MAX_SIZE=10485760

# Performance
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
ML_MODEL_TIMEOUT=60
TMDB_API_TIMEOUT=10
CONNECTION_POOL_SIZE=20

# Security
ENABLE_HTTPS=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1
API_KEY_HEADER=X-API-Key
ENABLE_AUTHENTICATION=false
JWT_SECRET_KEY=your-jwt-secret-key

# Feature Weights
TITLE_WEIGHT=1.0
OVERVIEW_WEIGHT=0.8
GENRE_WEIGHT=0.6
KEYWORD_WEIGHT=0.4
CAST_WEIGHT=0.3
PRODUCTION_COMPANY_WEIGHT=0.2
NUMERICAL_FEATURES_WEIGHT=0.3

# Recommendation Configuration
DEFAULT_RECOMMENDATION_LIMIT=10
MAX_RECOMMENDATION_LIMIT=50
SIMILAR_MOVIES_LIMIT=20
GENRE_RECOMMENDATIONS_LIMIT=20
TRENDING_MOVIES_LIMIT=20
PERSONALIZED_RECOMMENDATIONS_LIMIT=20

# User Preferences
MIN_RATING=0.5
MAX_RATING=5.0
RATING_PRECISION=0.5
MAX_FAVORITES=1000
MAX_WATCHLIST=500

# Data Processing
BATCH_SIZE=100
MAX_TEXT_LENGTH=10000
MIN_MOVIE_VOTES=10
MIN_POPULARITY_SCORE=1.0
ADULT_CONTENT_FILTER=true

# Model Configuration
MODEL_UPDATE_INTERVAL=86400
MODEL_RETRAIN_INTERVAL=604800
ENABLE_MODEL_VERSIONING=true
MODEL_BACKUP_COUNT=5
ENABLE_A_B_TESTING=false

# Analytics
ENABLE_ANALYTICS=true
TRACK_USER_BEHAVIOR=true
TRACK_RECOMMENDATION_CLICKS=true
TRACK_SEARCH_QUERIES=true
ANALYTICS_RETENTION_DAYS=365

# External Services
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
WEBHOOK_URL=your-webhook-url

# Development
TEST_MODE=false
TEST_DATABASE_URL=test_movie_recommendation.db
MOCK_TMDB_RESPONSES=false
ENABLE_PROFILING=false
DEBUG_RESPONSES=false
SEED_DATA_ENABLED=true
SEED_DATA_MOVIES_COUNT=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8014
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=false

# Image Processing
ENABLE_IMAGE_SIMILARITY=false
IMAGE_SIMILARITY_MODEL=resnet50
IMAGE_FEATURE_DIMENSION=2048
POSTER_SIMILARITY_THRESHOLD=0.7

# Content Filtering
ENABLE_CONTENT_FILTERING=true
CONTENT_FILTER_LEVEL=medium
BLOCKED_GENRES=
PREFERRED_GENRES=
MIN_VOTE_AVERAGE=5.0
MAX_RUNTIME_MINUTES=300
