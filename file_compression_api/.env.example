# File Compression API Environment Variables

# File Handling
MAX_FILE_SIZE=100MB
MAX_BATCH_SIZE=50
MAX_CONCURRENT_JOBS=10
COMPRESSION_TIMEOUT=3600
DECOMPRESSION_TIMEOUT=3600

# Storage Configuration
STORAGE_PATH=./compressed_files
TEMP_PATH=./temp
CLEANUP_INTERVAL_HOURS=24
RETENTION_DAYS=30
MAX_STORAGE_SIZE=10GB

# Compression Settings
DEFAULT_FORMAT=zip
DEFAULT_LEVEL=normal
MAX_SPLIT_SIZE=1000MB
PASSWORD_MIN_LENGTH=8
MAX_PASSWORD_ATTEMPTS=3

# Supported Formats
ENABLE_ZIP=true
ENABLE_GZIP=true
ENABLE_TAR=true
ENABLE_TAR_GZ=true
ENABLE_7Z=true
ENABLE_TAR_BZ2=true
ENABLE_LZ4=true
ENABLE_ZSTD=true

# Performance Configuration
WORKER_THREADS=4
QUEUE_SIZE=1000
PROGRESS_UPDATE_INTERVAL=1
CHUNK_SIZE=8192
BUFFER_SIZE=65536

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
API_KEY_REQUIRED=false
API_KEY_HEADER=X-API-Key
MAX_PASSWORD_ATTEMPTS=3
FILE_TYPE_WHITELIST=txt,pdf,jpg,png,gif,doc,docx,xls,xlsx,ppt,pptx,zip,tar,gz,7z

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/compression.log
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true
MAX_LOG_SIZE=100MB
LOG_RETENTION_DAYS=7

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost/compressiondb
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# External Services
WEBHOOK_URL=http://localhost:8001/webhooks
NOTIFICATION_SERVICE_URL=http://localhost:8002
STORAGE_SERVICE_URL=http://localhost:8003

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
RATE_LIMIT_PER_IP=100

# Memory Management
MAX_MEMORY_USAGE=1GB
MEMORY_CLEANUP_INTERVAL=300
TEMP_FILE_CLEANUP_INTERVAL=600

# Feature Flags
ENABLE_PASSWORD_PROTECTION=true
ENABLE_SPLIT_ARCHIVES=true
ENABLE_PATTERN_FILTERING=true
ENABLE_BACKGROUND_PROCESSING=true
ENABLE_PROGRESS_TRACKING=true
ENABLE_FILE_VALIDATION=true

# Development
DEBUG=false
TEST_MODE=false
MOCK_COMPRESSION=false
ENABLE_SWAGGER_UI=true
ENABLE_RELOAD=true
