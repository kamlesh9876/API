# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/expense_tracker
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=expense_tracker
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_POOL_SIZE=5
DATABASE_ECHO=false

# API Configuration
HOST=0.0.0.0
PORT=8012
DEBUG=false
RELOAD=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/expense_api.log
LOG_ROTATION=daily
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_TRANSACTIONS=20
RATE_LIMIT_ANALYTICS=10

# Currency Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,JPY,AUD,CHF
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXCHANGE_RATE_UPDATE_INTERVAL=3600

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/pdf,image/gif
ENABLE_VIRUS_SCAN=false
RETRIEVAL_TIMEOUT=30

# Email Notifications
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@your-expense-app.com
EMAIL_TEMPLATES_DIR=templates

# Analytics & Monitoring
ENABLE_ANALYTICS=true
DATA_RETENTION_DAYS=365
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_DIR=backups
ENABLE_METRICS=true
METRICS_PORT=8013

# Performance
ENABLE_CACHE=true
CACHE_TTL=300
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# Business Logic
DEFAULT_BUDGET_PERIOD=monthly
MAX_TRANSACTIONS_PER_DAY=100
MAX_CATEGORIES_PER_USER=50
MAX_BUDGETS_PER_USER=20
ENABLE_RECURRING_TRANSACTIONS=true

# Data Validation
MIN_TRANSACTION_AMOUNT=0.01
MAX_TRANSACTION_AMOUNT=999999999.99
TRANSACTION_DESCRIPTION_MAX_LENGTH=500
CATEGORY_NAME_MAX_LENGTH=100
ENABLE_TRANSACTION_LIMITS=false

# Integration
ENABLE_BANK_SYNC=false
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
ENABLE_QUICKBOOKS_SYNC=false
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
ENABLE_STRIPE_PAYMENTS=false
STRIPE_SECRET_KEY=sk_test_your_stripe_key

# Development
TEST_MODE=false
TEST_DATABASE_URL=postgresql://test:test@localhost/expense_tracker_test
ENABLE_SEED_DATA=true
SEED_DATA_USERS=5
SEED_DATA_TRANSACTIONS_PER_USER=100
ENABLE_PROFILING=false

# Security
ENABLE_HTTPS=false
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_FILE=logs/audit.log

# Features
ENABLE_RECEIPT_OCR=false
OCR_SERVICE_URL=http://localhost:8084/ocr
ENABLE_FINANCIAL_ADVICE=false
ENABLE_GOAL_TRACKING=false
ENABLE_INVESTMENT_TRACKING=false
ENABLE_BILL_REMINDERS=false
