# PDF Generation API Environment Variables

# Storage Configuration
PDF_STORAGE_PATH=./pdfs
TEMP_DIR=./temp
MAX_FILE_SIZE=50MB
MAX_CONCURRENT_JOBS=10

# Processing Configuration
DEFAULT_PAGE_SIZE=A4
DEFAULT_ORIENTATION=portrait
DEFAULT_MARGIN=20.0
DEFAULT_FONT_SIZE=12
DEFAULT_FONT_FAMILY=Arial

# Compression Settings
COMPRESSION_QUALITY=medium
COMPRESSION_TIMEOUT=300

# Conversion Settings
MAX_CONVERSION_JOBS=5
CONVERSION_TIMEOUT=600
SUPPORTED_FORMATS=html,txt,xml,csv

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
API_KEY_REQUIRED=false
ENABLE_PASSWORD_PROTECTION=true
MAX_PASSWORD_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/pdf_api.log

# Database Configuration (for production)
DATABASE_URL=sqlite:///./pdf_api.db
REDIS_URL=redis://localhost:6379

# External Services
EMAIL_SERVICE_URL=http://localhost:8001
STORAGE_SERVICE_URL=http://localhost:8002

# Performance Settings
WORKER_PROCESSES=4
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=30

# Feature Flags
ENABLE_WATERMARKING=true
ENABLE_METADATA_EDITING=true
ENABLE_BATCH_OPERATIONS=true
ENABLE_ASYNC_CONVERSION=true
