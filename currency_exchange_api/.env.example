# Currency Exchange API Environment Variables

# Rate Data Sources
RATE_UPDATE_INTERVAL=60
RATE_SOURCE_API_KEY=your_api_key
RATE_SOURCE_URL=https://api.exchangerate.com
BACKUP_RATE_SOURCE_URL=https://backup.api.com
MAX_RATE_AGE=300
RATE_SOURCE_TIMEOUT=30

# Supported Data Providers
ENABLE_FIXER_IO=true
ENABLE_COINGECKO=true
ENABLE_COINMARKETCAP=true
ENABLE_ALPHA_VANTAGE=true
ENABLE_YAHOO_FINANCE=true

# Conversion Configuration
MAX_CONVERSION_AMOUNT=1000000
MAX_BATCH_SIZE=100
CONVERSION_TIMEOUT=30
PRECISION_DECIMALS=6
ROUNDING_MODE=half_even

# Historical Data
HISTORICAL_DATA_DAYS=365
MAX_HISTORICAL_REQUESTS=10
HISTORICAL_CACHE_TTL=3600
HISTORICAL_BATCH_SIZE=1000
ENABLE_PREDICTIONS=true

# Rate Alerts
ALERT_CHECK_INTERVAL=30
MAX_ALERTS_PER_USER=100
ALERT_NOTIFICATION_RETRIES=3
ALERT_WEBHOOK_TIMEOUT=10
ALERT_EMAIL_ENABLED=true

# Portfolio Management
MAX_PORTFOLIOS_PER_USER=10
MAX_CURRENCIES_PER_PORTFOLIO=20
PORTFOLIO_UPDATE_INTERVAL=60
PORTFOLIO_HISTORY_RETENTION_DAYS=90

# Caching Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=300
ENABLE_CACHING=true
CACHE_PREFIX=currency_exchange
MAX_CACHE_SIZE=10000

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost/currencydb
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Security
API_KEY_REQUIRED=false
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/currency_exchange.log
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true
MAX_LOG_SIZE=100MB
LOG_RETENTION_DAYS=30

# External Services
WEBHOOK_URL=http://localhost:8001/webhooks
EMAIL_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003
ANALYTICS_SERVICE_URL=http://localhost:8004

# Performance
ENABLE_COMPRESSION=true
ENABLE_ASYNC_PROCESSING=true
MAX_WORKER_THREADS=10
QUEUE_SIZE=1000
CONNECTION_POOL_SIZE=20

# Feature Flags
ENABLE_CRYPTO_CURRENCIES=true
ENABLE_COMMODITIES=true
ENABLE_PREDICTIVE_RATES=true
ENABLE_PORTFOLIO_ANALYTICS=true
ENABLE_RATE_ALERTS=true
ENABLE_HISTORICAL_ANALYSIS=true

# Development
DEBUG=false
TEST_MODE=false
MOCK_RATES=true
ENABLE_SWAGGER_UI=true
ENABLE_RELOAD=true
