# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# GPS Data Processing
LOCATION_UPDATE_INTERVAL=30
MAX_LOCATION_AGE=86400
LOCATION_ACCURACY_THRESHOLD=100
SPEED_VALIDATION_ENABLED=true
ALTITUDE_VALIDATION_ENABLED=true

# Geofencing
GEOFENCE_CHECK_INTERVAL=60
MAX_GEOFENCES_PER_DEVICE=50
GEOFENCE_BUFFER_DISTANCE=10
GEOFENCE_ALERT_COOLDOWN=300
GEOFENCE_PRECISION=6

# Alert System
ENABLE_ALERTS=true
ALERT_RETENTION_DAYS=90
ALERT_BATCH_SIZE=100
ALERT_PROCESSING_INTERVAL=30
ALERT_EMAIL_NOTIFICATIONS=false
ALERT_SMS_NOTIFICATIONS=false

# Device Management
DEVICE_OFFLINE_THRESHOLD=300
DEVICE_BATTERY_LOW_THRESHOLD=20
DEVICE_STATUS_UPDATE_INTERVAL=60
MAX_DEVICES_PER_USER=100
DEVICE_HEARTBEAT_INTERVAL=120

# WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30
MAX_WEBSOCKET_CONNECTIONS=1000
WEBSOCKET_MESSAGE_QUEUE_SIZE=10000
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_SUBSCRIPTION_LIMIT=50

# Database (for persistence)
DATABASE_URL=sqlite:///./gps_tracking.db
ENABLE_DATA_BACKUP=true
BACKUP_INTERVAL_HOURS=24
DATA_RETENTION_DAYS=365
DATABASE_POOL_SIZE=10

# External Services
MAPS_API_KEY=your_maps_api_key
GEOCODING_SERVICE=google
REVERSE_GEOCODING_ENABLED=true
ADDRESS_CACHE_TTL=86400
TRAFFIC_DATA_ENABLED=false

# Logging
LOG_LEVEL=info
ENABLE_LOCATION_LOGGING=true
ALERT_LOG_RETENTION_DAYS=30
ERROR_LOG_RETENTION_DAYS=7
LOG_FILE_PATH=./logs/gps_tracking.log
ENABLE_PERFORMANCE_LOGGING=true

# Security
ENABLE_DEVICE_AUTHENTICATION=false
API_KEY_REQUIRED=false
RATE_LIMIT_PER_MINUTE=100
ENABLE_LOCATION_ENCRYPTION=false
JWT_SECRET_KEY=your_jwt_secret_key

# Performance
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_PROVIDER=memory
ENABLE_ASYNC_PROCESSING=true
MAX_WORKER_PROCESSES=4
QUEUE_PROCESSING_BATCH_SIZE=50

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365
ROUTE_OPTIMIZATION_ENABLED=false
PREDICTIVE_ANALYTICS_ENABLED=false
ANOMALY_DETECTION_ENABLED=true

# Mobile Integration
PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=your_fcm_server_key
APNS_CERTIFICATE_PATH=./certs/apns.pem
MOBILE_APP_VERSION_CHECK=true

# Fleet Management
FLEET_OPTIMIZATION_ENABLED=false
ROUTE_PLANNING_ENABLED=false
DRIVER_BEHAVIOR_ANALYSIS=false
FUEL_CONSUMPTION_TRACKING=false

# Compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_POLICY_ENABLED=true
LOCATION_CONSENT_REQUIRED=false
AUDIT_LOG_RETENTION_DAYS=2555
