# API Configuration
HOST=0.0.0.0
PORT=8018
DEBUG=false
RELOAD=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_RETRIES=3
RATE_LIMIT_STORAGE=memory
ENABLE_CORS=true
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Password Configuration
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128
ENABLE_COMMON_PASSWORD_CHECK=true
COMMON_PASSWORDS_FILE=./common_passwords.txt
ENABLE_PATTERN_DETECTION=true
ENABLE_ENTROPY_CALCULATION=true
ENABLE_CRACK_TIME_ESTIMATION=true
SIMILAR_CHARS=0O1lI

# Hash Configuration
DEFAULT_HASH_ALGORITHM=sha256
DEFAULT_HASH_FORMAT=hex
ENABLE_BULK_HASHING=true
MAX_BULK_ITEMS=50
SUPPORTED_ALGORITHMS=md5,sha1,sha224,sha256,sha384,sha512,sha3_224,sha3_256,sha3_384,sha3_512
HASH_CACHE_TTL=3600

# UUID Configuration
DEFAULT_UUID_VERSION=4
MAX_UUID_GENERATION=100
ENABLE_UUID_VALIDATION=true
ENABLE_UUID_PARSING=true
SUPPORTED_VERSIONS=1,3,4,5
UUID_NAMESPACE_DNS=6ba7b810-9dad-11d1-80b4-00c04fd430c8
UUID_NAMESPACE_URL=6ba7b811-9dad-11d1-80b4-00c04fd430c8
UUID_NAMESPACE_OID=6ba7b812-9dad-11d1-80b4-00c04fd430c8
UUID_NAMESPACE_X500=6ba7b814-9dad-11d1-80b4-00c04fd430c8

# Base64 Configuration
DEFAULT_ENCODING=utf-8
SUPPORTED_ENCODINGS=utf-8,ascii,latin-1
ENABLE_URL_ENCODING=true
MAX_TEXT_LENGTH=1000000
ENABLE_BULK_OPERATIONS=true

# Text Analysis Configuration
ENABLE_LANGUAGE_DETECTION=true
ENABLE_READABILITY_SCORE=true
ENABLE_TEXT_EXTRACTION=true
MAX_TEXT_ANALYSIS_LENGTH=1000000
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,ja,zh
ENABLE_REGEX_EXTRACTION=true
EXTRACT_EMAILS=true
EXTRACT_URLS=true
EXTRACT_PHONE_NUMBERS=true
EXTRACT_NUMBERS=true
EXTRACT_HASHTAGS=true
EXTRACT_MENTIONS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/devtools.log
LOG_ROTATION=daily
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_PERFORMANCE=true
LOG_SECURITY_EVENTS=true

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=3600
CACHE_STORAGE=memory
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
ENABLE_REQUEST_TIMEOUT=true
REQUEST_TIMEOUT=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8019
HEALTH_CHECK_INTERVAL=30
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_MONITORING=true
ENABLE_USAGE_ANALYTICS=true
ALERT_THRESHOLDS=high_error_rate=5,slow_requests=100

# Rate Limiting Configuration
RATE_LIMIT_STRATEGY=fixed-window
RATE_LIMIT_RETRIES=3
RATE_LIMIT_RETRY_DELAY=1
ENABLE_IP_WHITELIST=false
IP_WHITELIST=127.0.0.1,::1
ENABLE_IP_BLACKLIST=false
IP_BLACKLIST=

# Security Headers Configuration
ENABLE_SECURITY_HEADERS=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
STRICT_TRANSPORT_SECURITY=max-age=31536000
CONTENT_SECURITY_POLICY=default-src 'self'

# SSL/TLS Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_VERSION=TLSv1.2
FORCE_HTTPS=false

# Development Configuration
TEST_MODE=false
ENABLE_PROFILING=false
DEBUG_RESPONSES=false
ENABLE_STRESS_TESTING=false
MOCK_EXTERNAL_APIS=false
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true

# API Versioning
ENABLE_API_VERSIONING=true
DEFAULT_API_VERSION=v1
SUPPORTED_VERSIONS=v1,v2
VERSION_HEADER=X-API-Version
ENABLE_VERSION_DEPRECATION=false

# Documentation Configuration
ENABLE_DOCS=true
DOCS_URL=/docs
ENABLE_REDOC=true
REDOC_URL=/redoc
DOCS_AUTH_REQUIRED=false
ENABLE_OPENAPI_VALIDATION=true
API_DESCRIPTION=Ultimate Developer Helper API

# Database Configuration (if needed for caching/storage)
ENABLE_DATABASE=false
DATABASE_URL=sqlite:///devtools.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30
DATABASE_ECHO=false

# Redis Configuration (for distributed caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
ENABLE_REDIS_CACHING=false

# File Storage Configuration
ENABLE_FILE_STORAGE=false
STORAGE_PATH=./uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=txt,json,csv,xml
FILE_RETENTION_DAYS=30

# Email Configuration (for notifications)
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@devtools.com

# Webhook Configuration
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_EVENTS=high_usage,security_events,errors

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_STORAGE=local
BACKUP_ENCRYPTION=false
BACKUP_COMPRESSION=true
BACKUP_RETENTION_COPIES=30

# Maintenance Configuration
ENABLE_MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1
ENABLE_SCHEDULED_MAINTENANCE=false
MAINTENANCE_SCHEDULE=0 3 * * 0  # Sunday 3 AM

# Advanced Features Configuration
ENABLE_WEBSOCKETS=false
WEBSOCKET_PATH=/ws
ENABLE_STREAMING=false
ENABLE_BATCH_PROCESSING=true
BATCH_SIZE_LIMIT=100
ENABLE_PARALLEL_PROCESSING=true
MAX_WORKERS=4

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
EXPERIMENTAL_FEATURES=ml_password_analysis,advanced_text_mining
BETA_FEATURES_ENABLED=false
BETA_USER_WHITELIST=

# Error Handling Configuration
ENABLE_GRACEFUL_DEGRADATION=true
ENABLE_CIRCUIT_BREAKER=false
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
ENABLE_CUSTOM_ERROR_PAGES=false
ERROR_REPORTING_ENABLED=false

# Internationalization Configuration
ENABLE_I18N=false
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,ja,zh
LOCALE_PATH=./locales
TIMEZONE=UTC

# Accessibility Configuration
ENABLE_ACCESSIBILITY_FEATURES=false
WCAG_COMPLIANCE_LEVEL=AA
ENABLE_SCREEN_READER_SUPPORT=false
HIGH_CONTRAST_MODE=false

# Health Check Configuration
ENABLE_DETAILED_HEALTH_CHECK=true
HEALTH_CHECK_DEPENDENCIES=database,redis,external_apis
HEALTH_CHECK_TIMEOUT=10
ENABLE_HEALTH_CHECK_LOGGING=true

# Analytics Configuration
ENABLE_USAGE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
ENABLE_PERFORMANCE_ANALYTICS=true
ENABLE_SECURITY_ANALYTICS=true
ENABLE_ERROR_ANALYTICS=true

# Integration Configuration
ENABLE_SLACK_INTEGRATION=false
SLACK_WEBHOOK_URL=your-slack-webhook-url
ENABLE_DISCORD_INTEGRATION=false
DISCORD_WEBHOOK_URL=your-discord-webhook-url
ENABLE_TELEGRAM_INTEGRATION=false
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Custom Configuration
CUSTOM_FEATURES_ENABLED=false
CUSTOM_ALGORITHMS_PATH=./custom_algorithms
CUSTOM_VALIDATORS_PATH=./custom_validators
CUSTOM_EXTRACTORS_PATH=./custom_extractors
