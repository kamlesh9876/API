# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# Quantum Simulation Settings
MAX_QUBITS=20
DEFAULT_SHOTS=1000
SIMULATION_TIMEOUT=30
MAX_CIRCUIT_DEPTH=100

# Performance
ENABLE_CACHING=true
CACHE_TTL=300
MAX_CONCURRENT_SIMULATIONS=10
SIMULATION_PRECISION=double

# Results Storage
RESULT_RETENTION_HOURS=24
MAX_RESULTS_PER_CIRCUIT=100
ENABLE_RESULT_COMPRESSION=true

# Algorithm Settings
VQE_MAX_ITERATIONS=1000
VQE_CONVERGENCE_THRESHOLD=0.001
GROVER_ORACLE_COMPLEXITY=high

# Logging
LOG_LEVEL=info
ENABLE_DETAILED_LOGGING=false
LOG_GATE_OPERATIONS=false

# External Services
QUANTUM_HARDWARE_PROVIDER=ibm
IBM_QUANTUM_API_KEY=your-ibm-key
RIGETTI_API_KEY=your-rigetti-key

# Security
API_KEY_REQUIRED=false
RATE_LIMIT_PER_MINUTE=200
MAX_CIRCUIT_SIZE=1MB
