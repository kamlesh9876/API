# SMS Gateway API Environment Variables

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# AWS SNS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:your-topic

# Plivo Configuration
PLIVO_AUTH_ID=your_plivo_auth_id
PLIVO_AUTH_TOKEN=your_plivo_auth_token
PLIVO_PHONE_NUMBER=+1234567890

# Nexmo/Vonage Configuration
NEXMO_API_KEY=your_nexmo_api_key
NEXMO_API_SECRET=your_nexmo_api_secret
NEXMO_PHONE_NUMBER=+1234567890

# Clickatell Configuration
CLICKATELL_API_KEY=your_clickatell_api_key
CLICKATELL_API_SECRET=your_clickatell_api_secret

# API Configuration
DEFAULT_PROVIDER=twilio
DEFAULT_FROM_NUMBER=+1234567890
MAX_MESSAGE_LENGTH=1600
MAX_RECIPIENTS_PER_REQUEST=1000
MAX_BATCH_SIZE=1000

# Rate Limiting
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
RATE_LIMIT_PER_SENDER=1000

# OTP Configuration
OTP_DEFAULT_LENGTH=6
OTP_DEFAULT_EXPIRY=300
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN=60
OTP_ALPHANUMERIC_ALLOWED=false

# Template Configuration
TEMPLATE_CACHE_TTL=3600
MAX_TEMPLATE_SIZE=1MB
MAX_TEMPLATE_VARIABLES=50

# Webhook Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5
WEBHOOK_SECRET=your-webhook-secret

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost/smsdb
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Security
API_KEY_REQUIRED=false
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ENCRYPTION_KEY=your-encryption-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/sms_gateway.log
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true

# Background Tasks
MAX_WORKER_THREADS=10
QUEUE_RETENTION_DAYS=30
FAILED_SMS_RETENTION_DAYS=7
CLEANUP_INTERVAL_HOURS=1

# Cost Configuration
COST_PER_MESSAGE_US=0.05
COST_PER_MESSAGE_INTERNATIONAL=0.10
COST_PER_SEGMENT_US=0.0075
COST_PER_SEGMENT_INTERNATIONAL=0.015

# Compliance
TCPA_COMPLIANCE=true
GDPR_COMPLIANCE=true
DNC_CHECK_ENABLED=true
CONSENT_REQUIRED=true

# Performance
ENABLE_COMPRESSION=true
CACHE_STATIC_CONTENT=true
CONNECTION_POOL_SIZE=20
MAX_CONNECTIONS=100

# Development
DEBUG=false
TEST_MODE=false
MOCK_SMS_PROVIDERS=true
ENABLE_SWAGGER_UI=true
