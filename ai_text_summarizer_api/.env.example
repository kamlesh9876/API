# API Configuration
HOST=0.0.0.0
PORT=8014
DEBUG=false
RELOAD=false

# Model Configuration
DEFAULT_MODEL=facebook/bart-large-cnn
MULTILINGUAL_MODEL=facebook/mbart-large-50-many-to-many-mmt
SMALL_MODEL=t5-small
BASE_MODEL=t5-base
LANGUAGE_DETECTOR=papluca/xlm-roberta-base-language-detection

# Device Configuration
DEVICE=auto
MAX_MEMORY_GB=8
ENABLE_GPU=true
GPU_MEMORY_FRACTION=0.8
TORCH_CUDA_ARCH_LIST=6.0;6.1;7.0;7.5;8.0;8.6

# Processing Limits
MAX_TEXT_LENGTH=50000
MAX_BATCH_SIZE=10
MAX_FILE_SIZE_MB=10
REQUEST_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=5

# Model Paths and Caching
MODEL_CACHE_DIR=./models
DOWNLOAD_MODELS=true
OFFLINE_MODE=false
CACHE_MODELS=true
MODEL_CACHE_TTL=86400

# Language Detection
LANGUAGE_DETECTION_CONFIDENCE=0.7
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja,ko,ar,hi
DEFAULT_LANGUAGE=en

# NLP Configuration
SPACY_MODEL=en_core_web_sm
NLTK_DATA_PATH=./nltk_data
ENABLE_POS_TAGGING=true
ENABLE_NER=true
ENABLE_CHUNKING=true
ENABLE_STEMMING=false

# Summarization Parameters
DEFAULT_SUMMARY_TYPE=abstractive
DEFAULT_SUMMARY_LENGTH=medium
MIN_SUMMARY_LENGTH=10
MAX_SUMMARY_LENGTH=1000
DEFAULT_KEYWORD_COUNT=10
DEFAULT_BULLET_POINTS=5

# Quality and Scoring
CONFIDENCE_THRESHOLD=0.7
ENABLE_CONFIDENCE_SCORING=true
QUALITY_METRICS_ENABLED=true
ROUGE_SCORING=false
BERT_SCORING=false

# Performance Optimization
ENABLE_BATCH_PROCESSING=true
BATCH_SIZE=4
ENABLE_CACHING=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
ENABLE_QUANTIZATION=false
ENABLE_HALF_PRECISION=false

# Logging and Monitoring
LOG_LEVEL=INFO
LOG_FILE=logs/summarizer.log
LOG_MODEL_PERFORMANCE=true
LOG_REQUESTS=true
LOG_RESPONSES=false
LOG_ROTATION=daily
LOG_MAX_SIZE=10485760

# Security
ENABLE_AUTHENTICATION=false
API_KEY_HEADER=X-API-Key
JWT_SECRET_KEY=your-jwt-secret-key
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Advanced Features
ENABLE_FINE_TUNING=false
FINE_TUNING_DATA_PATH=./training_data
FINE_TUNING_OUTPUT_PATH=./models/fine_tuned
FINE_TUNING_EPOCHS=3
FINE_TUNING_BATCH_SIZE=8
ENABLE_MODEL_VERSIONING=true
MODEL_BACKUP_COUNT=3

# File Processing
ALLOWED_FILE_TYPES=.txt,.md,.rtf,.csv
ENABLE_VIRUS_SCAN=false
TEMP_DIR=/tmp/summarizer
CLEANUP_TEMP_FILES=true
FILE_RETENTION_HOURS=24

# Analytics and Metrics
ENABLE_ANALYTICS=true
TRACK_USER_BEHAVIOR=false
TRACK_MODEL_PERFORMANCE=true
TRACK_LANGUAGE_USAGE=true
ANALYTICS_RETENTION_DAYS=90
ENABLE_PROMETHEUS=true
METRICS_PORT=8015

# Development and Testing
TEST_MODE=false
TEST_DATABASE_URL=test_summaries.db
MOCK_MODEL_RESPONSES=false
ENABLE_PROFILING=false
DEBUG_RESPONSES=false
ENABLE_STRESS_TESTING=false

# Model Specific Settings
BART_MAX_LENGTH=1024
BART_NUM_BEAMS=4
BART_LENGTH_PENALTY=2.0
T5_MAX_LENGTH=512
T5_NUM_BEAMS=4
T5_LENGTH_PENALTY=1.0

# Memory Management
ENABLE_MEMORY_MONITORING=true
MEMORY_WARNING_THRESHOLD=0.8
MEMORY_CRITICAL_THRESHOLD=0.95
AUTO_CLEANUP_MEMORY=true
CLEANUP_INTERVAL=300

# Error Handling
MAX_RETRIES=3
RETRY_DELAY=1
ENABLE_FALLBACK_MODELS=true
FALLBACK_MODEL=t5-small
ENABLE_GRACEFUL_DEGRADATION=true

# Integration Settings
ENABLE_WEBHOOKS=false
WEBHOOK_URL=your-webhook-url
WEBHOOK_SECRET=your-webhook-secret
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Experimental Features
ENABLE_REAL_TIME_SUMMARIZATION=false
ENABLE_MULTI_DOCUMENT_SUMMARIZATION=false
ENABLE_CROSS_LINGUAL_SUMMARIZATION=false
ENABLE_DIALOGUE_SUMMARIZATION=false
ENABLE_CODE_SUMMARIZATION=false

# Health Monitoring
HEALTH_CHECK_INTERVAL=30
ENABLE_DETAILED_HEALTH=true
MONITOR_GPU_TEMPERATURE=true
MAX_GPU_TEMPERATURE=85
ENABLE_AUTO_SCALING=false
