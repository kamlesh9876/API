# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# Security Settings
MIN_CONFIDENCE_THRESHOLD=0.7
MAX_FAILED_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=15
SESSION_TIMEOUT_MINUTES=30
TEMPLATE_ENCRYPTION_KEY=your-encryption-key

# Biometric Settings
TEMPLATE_RETENTION_DAYS=365
MAX_TEMPLATES_PER_USER=10
QUALITY_THRESHOLD=0.6
LIVENESS_CHALLENGE_TIMEOUT=30

# Performance
MAX_CONCURRENT_AUTH=100
AUTHENTICATION_TIMEOUT=60
ENABLE_ASYNC_PROCESSING=true

# Liveness Detection
FACE_LIVENESS_ENABLED=true
FINGERPRINT_LIVENESS_ENABLED=true
VOICE_LIVENESS_ENABLED=true
IRIS_LIVENESS_ENABLED=true

# Logging
LOG_LEVEL=info
AUDIT_RETENTION_DAYS=90
ENABLE_DETAILED_LOGGING=true
LOG_TEMPLATE_OPERATIONS=false

# Database (for persistence)
DATABASE_URL=sqlite:///./biometric_auth.db
ENABLE_BACKUP=true
BACKUP_INTERVAL_HOURS=24

# External Services
NOTIFICATION_SERVICE_URL=https://api.example.com/notifications
SECURITY_MONITORING_URL=https://api.example.com/security

# Compliance
GDPR_COMPLIANCE=true
ISO_IEC_COMPLIANCE=true
DATA_RETENTION_YEARS=7
