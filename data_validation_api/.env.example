# Data Validation API Environment Variables

# Validation Limits
MAX_VALIDATION_SIZE=10MB
BATCH_VALIDATION_LIMIT=100
MAX_RULES_PER_BATCH=50
MAX_FIELD_NAME_LENGTH=100
MAX_FIELD_VALUE_LENGTH=10000

# File Validation
FILE_VALIDATION_ENABLED=true
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=json,xml,csv,txt,yaml,yml
MALWARE_SCAN_ENABLED=false
VIRUS_SCAN_API_KEY=your_virus_scan_key

# Schema Validation
SCHEMA_VALIDATION_ENABLED=true
MAX_SCHEMA_DEPTH=10
MAX_SCHEMA_PROPERTIES=100
MAX_SCHEMA_LENGTH=100KB
STRICT_SCHEMA_MODE=true

# Performance Configuration
VALIDATION_TIMEOUT=30
CONCURRENT_VALIDATIONS=10
CACHE_VALIDATION_RESULTS=true
CACHE_TTL=300
MAX_CACHE_SIZE=10000

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
INPUT_SANITIZATION=true
ENCRYPT_SENSITIVE_DATA=true

# Validation Rules Configuration
EMAIL_VALIDATION_ENABLED=true
PHONE_VALIDATION_ENABLED=true
CREDIT_CARD_VALIDATION_ENABLED=true
SSN_VALIDATION_ENABLED=true
PASSWORD_VALIDATION_ENABLED=true

# Email Validation Options
EMAIL_CHECK_MX_RECORDS=false
EMAIL_ALLOW_SUBDOMAINS=true
EMAIL_MAX_LENGTH=254
EMAIL_BLOCKED_DOMAINS=spamdomain.com,fakedomain.com

# Phone Validation Options
PHONE_DEFAULT_COUNTRY=US
PHONE_ALLOWED_COUNTRIES=US,CA,GB,DE,FR,AU
PHONE_FORMAT=E164
PHONE_VALIDATE_LENGTH=true

# Password Validation Options
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_FORBIDDEN_PATTERNS=123456,password,admin

# Credit Card Validation Options
CREDIT_CARD_LUHN_CHECK=true
CREDIT_CARD_ALLOW_TEST_NUMBERS=false
CREDIT_CARD_MASK_IN_LOGS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_VALIDATION_ERRORS=true
LOG_VALIDATION_SUCCESS=false
AUDIT_LOG_ENABLED=true
LOG_FILE=./logs/validation.log
MAX_LOG_SIZE=100MB
LOG_RETENTION_DAYS=30

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost/validationdb
REDIS_URL=redis://localhost:6379
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# External Services
WEBHOOK_URL=http://localhost:8001/webhooks
NOTIFICATION_SERVICE_URL=http://localhost:8002
ANALYTICS_SERVICE_URL=http://localhost:8003

# Feature Flags
ENABLE_CUSTOM_VALIDATORS=true
ENABLE_REGEX_VALIDATION=true
ENABLE_BUSINESS_RULES=true
ENABLE_VALIDATION_CHAINING=true
ENABLE_ASYNC_VALIDATION=true

# Development
DEBUG=false
TEST_MODE=false
MOCK_EXTERNAL_VALIDATIONS=true
ENABLE_SWAGGER_UI=true
ENABLE_RELOAD=true
