# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# Social Media APIs
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
YOUTUBE_API_KEY=your_youtube_api_key
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
MAX_POSTS_PER_DAY=1000
PLATFORM_RATE_LIMITS=true

# Scheduling
SCHEDULED_POST_CHECK_INTERVAL=60
MAX_RETRY_ATTEMPTS=3
POST_PUBLISH_TIMEOUT=30

# Database (for persistence)
DATABASE_URL=sqlite:///./social_media.db
ENABLE_POST_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Webhooks
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_SECRET_LENGTH=32

# Content Settings
MAX_CONTENT_LENGTH=100000
ENABLE_CONTENT_MODERATION=false
AUTO_HASHTAG_GENERATION=false

# Logging
LOG_LEVEL=info
ENABLE_API_LOGGING=true
POST_PUBLISH_LOG_RETENTION_DAYS=30
ENABLE_PLATFORM_LOGGING=true

# Security
ENABLE_ENCRYPTION=true
TOKEN_ENCRYPTION_KEY=your_encryption_key
WEBHOOK_SIGNATURE_VALIDATION=true
