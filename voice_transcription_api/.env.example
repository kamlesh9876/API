# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false

# CORS
ALLOW_ORIGINS=*
ALLOW_CREDENTIALS=true
ALLOW_METHODS=*
ALLOW_HEADERS=*

# Audio Processing
SUPPORTED_AUDIO_FORMATS=wav,mp3,flac,m4a
DEFAULT_LANGUAGE=en
DEFAULT_MODEL=base
DEFAULT_AUDIO_FORMAT=wav
ENABLE_TIMESTAMPS=true
ENABLE_SPEAKER_DIARIZATION=false
ENABLE_PROFANITY_FILTER=false
MAX_AUDIO_SIZE_MB=25
MAX_AUDIO_DURATION_SECONDS=600
SAMPLE_RATE=16000
CHANNELS=1

# Transcription Jobs
MAX_CONCURRENT_JOBS=5
JOB_RETENTION_HOURS=24
JOB_PROGRESS_INTERVAL_SECONDS=1
ENABLE_BATCH_TRANSCRIPTION=true
MAX_BATCH_SIZE=10

# Model Metadata (demo values)
MODEL_BASE_ACCURACY=0.85
MODEL_SMALL_ACCURACY=0.90
MODEL_MEDIUM_ACCURACY=0.94
MODEL_LARGE_ACCURACY=0.97

# Storage
STORE_AUDIO=false
AUDIO_STORAGE_DIR=./audio
STORE_TRANSCRIPTS=false
TRANSCRIPTS_DIR=./transcripts

# Performance and Caching
ENABLE_CACHE=false
CACHE_TTL=3600

# Security
ENABLE_AUTHENTICATION=false
API_KEY_HEADER=X-API-Key
API_KEY=your-api-key
RATE_LIMIT_REQUESTS=60 # demo values, adjust as needed
RATE_LIMIT_WINDOW=60 # demo values, adjust as needed

# External Transcription Services (optional)
OPENAI_API_KEY=your-openai-key
GOOGLE_SPEECH_API_KEY=your-google-speech-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus
DEEPGRAM_API_KEY=your-deepgram-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/voice_transcription.log
LOG_REQUESTS=true
LOG_RESPONSES=false
