# API Configuration
HOST=0.0.0.0
PORT=8015
DEBUG=false
RELOAD=false

# File Storage
OUTPUT_DIR=./generated_qr_codes
MAX_FILE_SIZE_MB=10
MAX_STORAGE_GB=10
CLEANUP_INTERVAL_HOURS=24
RETENTION_DAYS=30
AUTO_CLEANUP_ENABLED=true

# Database Configuration
DATABASE_URL=qr_codes.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30
DATABASE_ECHO=false
ENABLE_DATABASE_BACKUP=true
BACKUP_INTERVAL_HOURS=6

# QR Code Defaults
DEFAULT_SIZE=200
DEFAULT_FORMAT=PNG
DEFAULT_ERROR_CORRECTION=M
DEFAULT_BOX_SIZE=10
DEFAULT_BORDER=4
DEFAULT_FILL_COLOR=#000000
DEFAULT_BACK_COLOR=#FFFFFF
DEFAULT_STYLE=square

# Size Limits
MIN_SIZE=50
MAX_SIZE=1000
MIN_BOX_SIZE=1
MAX_BOX_SIZE=50
MIN_BORDER=0
MAX_BORDER=20

# Content Limits
MAX_CONTENT_LENGTH=2000
MIN_CONTENT_LENGTH=1
SUPPORTED_CONTENT_TYPES=text,url,email,phone,sms,wifi,vcard

# Security
ENABLE_AUTHENTICATION=false
API_KEY_HEADER=X-API-Key
JWT_SECRET_KEY=your-jwt-secret-key
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Logo Processing
MAX_LOGO_SIZE_MB=2
SUPPORTED_LOGO_FORMATS=PNG,JPEG,JPG,GIF,BMP
LOGO_CACHE_TTL=3600
ENABLE_LOGO_OPTIMIZATION=true
LOGO_QUALITY=85
MAX_LOGO_RATIO=0.2

# Analytics
ENABLE_ANALYTICS=true
TRACK_IP_ADDRESSES=true
TRACK_USER_AGENTS=true
ANALYTICS_RETENTION_DAYS=90
ENABLE_DETAILED_LOGGING=true
ENABLE_REAL_TIME_ANALYTICS=false

# Performance
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/qr_api.log
LOG_ROTATION=daily
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_PERFORMANCE=true

# Advanced Features
ENABLE_BATCH_GENERATION=true
MAX_BATCH_SIZE=10
ENABLE_CUSTOM_STYLES=false
ENABLE_ADVANCED_ERROR_CORRECTION=true
ENABLE_VECTOR_OPTIMIZATION=true
ENABLE_GRADIENT_SUPPORT=false

# Error Correction
ERROR_CORRECTION_LEVELS=L,M,Q,H
DEFAULT_ERROR_CORRECTION_RECOMMENDATION=true
AUTO_ADJUST_ERROR_CORRECTION=true
ERROR_CORRECTION_LOGO_FACTOR=1.5

# Format Support
ENABLE_PNG=true
ENABLE_SVG=true
ENABLE_JPEG=true
ENABLE_BMP=false
ENABLE_PDF=false
ENABLE_WEBP=false

# Style Support
ENABLE_SQUARE_STYLE=true
ENABLE_ROUNDED_STYLE=true
ENABLE_CIRCLE_STYLE=false
ENABLE_CUSTOM_STYLE=false
STYLE_CACHE_TTL=7200

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8016
HEALTH_CHECK_INTERVAL=30
ENABLE_DISK_USAGE_MONITORING=true
DISK_USAGE_WARNING_THRESHOLD=80
DISK_USAGE_CRITICAL_THRESHOLD=95

# Memory Management
ENABLE_MEMORY_MONITORING=true
MEMORY_WARNING_THRESHOLD=0.8
MEMORY_CRITICAL_THRESHOLD=0.95
AUTO_CLEANUP_MEMORY=true
CLEANUP_MEMORY_INTERVAL=300

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_STORAGE=memory
RATE_LIMIT_STRATEGY=fixed-window
RATE_LIMIT_RETRIES=3
RATE_LIMIT_RETRY_DELAY=1

# File Management
ENABLE_FILE_VERSIONING=false
MAX_FILE_VERSIONS=5
ENABLE_FILE_COMPRESSION=false
FILE_COMPRESSION_THRESHOLD=10240
ENABLE_FILE_ENCRYPTION=false

# User Management
ENABLE_USER_REGISTRATION=false
DEFAULT_USER_QUOTA=100
ADMIN_USER_QUOTA=1000
ENABLE_USER_ANALYTICS=true
USER_SESSION_TIMEOUT=3600

# Integration Settings
ENABLE_WEBHOOKS=false
WEBHOOK_URL=your-webhook-url
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_EVENTS=generate,download,delete
ENABLE_EMAIL_NOTIFICATIONS=false

# Development
TEST_MODE=false
TEST_DATABASE_URL=test_qr_codes.db
MOCK_LOGO_DOWNLOAD=false
ENABLE_PROFILING=false
DEBUG_RESPONSES=false
ENABLE_STRESS_TESTING=false

# Security Headers
ENABLE_SECURITY_HEADERS=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
STRICT_TRANSPORT_SECURITY=max-age=31536000

# Content Security Policy
ENABLE_CSP=false
CSP_DIRECTIVE=default-src 'self'

# SSL/TLS
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_VERSION=TLSv1.2

# Backup and Recovery
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false
BACKUP_STORAGE_PATH=./backups

# API Versioning
ENABLE_API_VERSIONING=true
DEFAULT_API_VERSION=v1
SUPPORTED_VERSIONS=v1,v2
VERSION_HEADER=X-API-Version

# Documentation
ENABLE_DOCS=true
DOCS_URL=/docs
ENABLE_REDOC=true
REDOC_URL=/redoc
DOCS_AUTH_REQUIRED=false

# Experimental Features
ENABLE_ANIMATED_QR=false
ENABLE_GRADIENT_QR=false
ENABLE_PATTERN_OVERLAYS=false
ENABLE_MICRO_QR=false
ENABLE_FRAME_QR=false
