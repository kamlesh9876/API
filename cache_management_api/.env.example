# Cache Management API Environment Variables

# Cache Configuration
CACHE_BACKEND=memory
CACHE_STRATEGY=lru
CACHE_MAX_MEMORY=104857600
CACHE_MAX_ITEMS=10000
CACHE_DEFAULT_TTL=3600
CACHE_CLEANUP_INTERVAL=300

# Backend Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECTION_TIMEOUT=30

MEMCACHED_URL=memcached://localhost:11211
MEMCACHED_USERNAME=
MEMCACHED_PASSWORD=
MEMCACHED_MAX_CONNECTIONS=10

DATABASE_URL=sqlite:///./cache.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# File Cache Configuration
FILE_CACHE_PATH=./cache
FILE_CACHE_PERMISSIONS=644
FILE_CACHE_MAX_FILES=10000
FILE_CACHE_CLEANUP_ENABLED=true

# Performance Settings
CACHE_COMPRESSION_ENABLED=false
CACHE_COMPRESSION_THRESHOLD=1024
CACHE_ENCRYPTION_ENABLED=false
CACHE_ENCRYPTION_KEY=your_encryption_key
CACHE_SERIALIZATION_FORMAT=json

# Cache Limits
CACHE_MAX_KEY_LENGTH=250
CACHE_MAX_VALUE_SIZE=1048576
CACHE_MAX_BATCH_SIZE=1000
CACHE_MAX_CONCURRENT_OPERATIONS=100

# Monitoring and Analytics
CACHE_METRICS_ENABLED=true
CACHE_ACCESS_LOG_ENABLED=true
CACHE_PERFORMANCE_TRACKING=true
CACHE_DETAILED_STATS=true
CACHE_EXPORT_ENABLED=true

# Security
CACHE_AUTH_ENABLED=false
CACHE_API_KEY=your_cache_api_key
CACHE_JWT_SECRET=your_jwt_secret
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_PER_MINUTE=1000

# TTL Configuration
CACHE_MIN_TTL=1
CACHE_MAX_TTL=86400
CACHE_EXTENDED_TTL=604800
CACHE_DEFAULT_TTL_SHORT=300
CACHE_DEFAULT_TTL_MEDIUM=3600
CACHE_DEFAULT_TTL_LONG=86400

# Eviction Settings
CACHE_EVICTION_POLICY=lru
CACHE_EVICTION_BATCH_SIZE=100
CACHE_EVICTION_THRESHOLD=0.9
CACHE_LAZY_EVICTION_ENABLED=true

# Background Tasks
CACHE_CLEANUP_ENABLED=true
CACHE_CLEANUP_INTERVAL=300
CACHE_TTL_CHECK_INTERVAL=60
CACHE_STATS_UPDATE_INTERVAL=30
CACHE_BACKGROUND_TASKS=true

# Development
DEBUG=false
TEST_MODE=false
MOCK_REDIS=false
MOCK_MEMCACHED=false
ENABLE_SWAGGER_UI=true
ENABLE_RELOAD=true
