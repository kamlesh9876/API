# Model Configuration
MODEL_PATH=models/fake_news_detector.pkl
FEATURE_CACHE_SIZE=1000
MODEL_VERSION=1.0.0

# API Settings
MAX_BATCH_SIZE=100
PROCESSING_TIMEOUT=30
MAX_TEXT_LENGTH=10000

# External Services
FACT_CHECK_API_KEY=your-fact-check-api-key
NEWS_API_KEY=your-news-api-key
GOOGLE_FACT_CHECK_API_KEY=your-google-api-key

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Database
DATABASE_URL=sqlite:///news_classification.db
STORE_CLASSIFICATIONS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/news_classification.log
ENABLE_METRICS=true

# Feature Engineering
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_READABILITY_ANALYSIS=true
ENABLE_TOPIC_MODELING=false

# Machine Learning
USE_GPU=false
MODEL_CONFIDENCE_THRESHOLD=0.6
ENABLE_ENSEMBLE=false

# Security
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
ENABLE_AUTHENTICATION=false

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=8006
