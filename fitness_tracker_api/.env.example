# Database Configuration
DATABASE_URL=fitness_tracker.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=3600
DATABASE_TIMEOUT=30
DATABASE_POOL_SIZE=5

# API Configuration
HOST=0.0.0.0
PORT=8010
DEBUG=false
RELOAD=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fitness_api.log
LOG_ROTATION=daily
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_UPLOADS=10
RATE_LIMIT_ANALYTICS=20

# Data Retention
DATA_RETENTION_DAYS=365
CLEANUP_INTERVAL=86400
ARCHIVE_OLD_DATA=true

# Performance
CACHE_ENABLED=true
CACHE_TTL=300
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# Health Monitoring
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
METRICS_PORT=8011

# Fitness Calculations
DEFAULT_ACTIVITY_LEVEL=moderate
BMI_UNDERWEIGHT_THRESHOLD=18.5
BMI_NORMAL_THRESHOLD=25
BMI_OVERWEIGHT_THRESHOLD=30
CALORIE_DEFICIT_GOAL=500
CALORIE_SURPLUS_GOAL=300

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
ENABLE_PROFILE_PHOTOS=true

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourfitnessapp.com
EMAIL_NOTIFICATIONS_ENABLED=true

# Third-party Integrations
ENABLE_STRAVA=false
STRAVA_CLIENT_ID=your-strava-client-id
STRAVA_CLIENT_SECRET=your-strava-client-secret
ENABLE_FITBIT=false
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
ENABLE_USER_ANALYTICS=true
ANONYMIZE_DATA=true

# Development
TEST_DATABASE_URL=test_fitness_tracker.db
ENABLE_SEED_DATA=true
SEED_DATA_USERS=10
SEED_DATA_WORKOUTS_PER_USER=50
