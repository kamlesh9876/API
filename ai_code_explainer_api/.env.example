# Local LLM Configuration
LOCAL_LLM_URL=http://localhost:8080
LOCAL_LLM_MODEL=llama2
LOCAL_LLM_TIMEOUT=30
LOCAL_LLM_MAX_TOKENS=1000
LOCAL_LLM_TEMPERATURE=0.7

# HuggingFace Configuration
HUGGINGFACE_API_KEY=hf_your_huggingface_token
HUGGINGFACE_MODEL=microsoft/CodeBERT-base
HUGGINGFACE_TIMEOUT=60
HUGGINGFACE_MAX_TOKENS=512

# Tree-sitter Configuration
TREE_SITTER_LIB_PATH=/usr/local/lib
TREE_SITTER_GRAMMAR_PATH=./grammars
TREE_SITTER_TIMEOUT=10

# API Configuration
HOST=0.0.0.0
PORT=8011
DEBUG=false
RELOAD=false
MAX_FILE_SIZE=10485760
MAX_CODE_LENGTH=1000000
ENABLE_ASYNC_PROCESSING=true

# Caching Configuration
ENABLE_CACHE=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
CACHE_BACKEND=redis

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ANALYSIS=10
RATE_LIMIT_UPLOAD=5
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai_code_explainer.log
LOG_ANALYSIS_REQUESTS=true
LOG_MODEL_RESPONSES=false
LOG_ROTATION=daily
LOG_MAX_SIZE=10485760

# Performance
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=120
ENABLE_BATCH_PROCESSING=true
ENABLE_STREAMING=true
WORKER_PROCESSES=4

# Security
ENABLE_INPUT_SANITIZATION=true
MAX_CODE_COMPLEXITY=100
BLOCKED_PATTERNS=system,exec,eval,subprocess,os
ALLOWED_FILE_EXTENSIONS=.py,.js,.java,.ts,.cpp,.c,.go,.rs
ENABLE_VIRUS_SCAN=false

# Model Configuration
DEFAULT_ANALYSIS_TYPES=explain,debug
CONFIDENCE_THRESHOLD=0.7
ENABLE_FALLBACK_RESPONSES=true
MODEL_SELECTION_STRATEGY=auto
ENABLE_MODEL_ENSEMBLE=false

# File Processing
UPLOAD_DIR=uploads
TEMP_DIR=/tmp/ai_code_explainer
CLEANUP_TEMP_FILES=true
FILE_RETENTION_HOURS=24

# Database (for storing analysis history)
DATABASE_URL=sqlite:///analysis_history.db
DATABASE_POOL_SIZE=5
DATABASE_ECHO=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8012
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=false

# Integration
ENABLE_GITHUB_INTEGRATION=false
GITHUB_TOKEN=ghp_your_github_token
ENABLE_GITLAB_INTEGRATION=false
GITLAB_TOKEN=glpat_your_gitlab_token
ENABLE_JIRA_INTEGRATION=false

# Advanced Features
ENABLE_CODE_GENERATION=false
ENABLE_CODE_TRANSLATION=false
ENABLE_TEST_GENERATION=false
ENABLE_DOCUMENTATION_TEMPLATES=true
ENABLE_CUSTOM_RULES=false

# Model Fine-tuning
ENABLE_FINE_TUNING=false
FINE_TUNING_DATA_PATH=./training_data
FINE_TUNING_OUTPUT_PATH=./models/custom
FINE_TUNING_EPOCHS=3
FINE_TUNING_BATCH_SIZE=8

# Development
TEST_MODE=false
MOCK_LLM_RESPONSES=true
ENABLE_PROFILING=false
DEBUG_RESPONSES=false
ENABLE_CORS=true
