# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# Dataset Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
SUPPORTED_FORMATS=csv,json,parquet,excel

# Model Training
MAX_CONCURRENT_TRAINING=5
DEFAULT_EPOCHS=10
TRAINING_TIMEOUT=3600
MODEL_STORAGE_DIR=./models
ENABLE_GPU=false

# Database (for persistence)
DATABASE_URL=sqlite:///./ml_platform.db
MODEL_RETENTION_DAYS=90

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
PREDICTION_BATCH_SIZE=100
MAX_PREDICTION_CONCURRENCY=10

# Logging
LOG_LEVEL=info
ENABLE_TRAINING_LOGS=true
METRICS_RETENTION_DAYS=30
LOG_MODEL_PERFORMANCE=true

# External Services
MLFLOW_TRACKING_URI=http://localhost:5000
TENSORBOARD_PORT=6006

# Security
API_KEY_REQUIRED=false
MODEL_ACCESS_CONTROL=true
DATA_ENCRYPTION=false
