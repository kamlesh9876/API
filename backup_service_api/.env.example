# Backup Service API Environment Variables

# Backup Configuration
BACKUP_STORAGE_PATH=./backups
MAX_CONCURRENT_BACKUPS=5
DEFAULT_RETENTION_DAYS=30
COMPRESSION_LEVEL=6
ENCRYPTION_ENABLED=true
DEFAULT_BACKUP_TYPE=full
BACKUP_CHUNK_SIZE=8192

# Storage Configuration
MAX_STORAGE_SIZE=10GB
STORAGE_CLEANUP_ENABLED=true
STORAGE_WARNING_THRESHOLD=0.9
BACKUP_VERIFICATION_ENABLED=true
MAX_FILE_SIZE=1GB
PARALLEL_PROCESSING=true
MAX_WORKER_THREADS=4

# Performance Settings
PROGRESS_UPDATE_INTERVAL=1
BACKUP_TIMEOUT=3600
RESTORE_TIMEOUT=3600
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=5

# Security
ENCRYPTION_KEY=your_encryption_key
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
API_KEY_REQUIRED=false
BACKUP_ACCESS_LOG_ENABLED=true
SECURE_FILE_DELETION=true

# Cloud Storage - AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET_NAME=your-backup-bucket
S3_STORAGE_CLASS=STANDARD
S3_SERVER_SIDE_ENCRYPTION=AES256

# Cloud Storage - Azure Blob
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_CONTAINER_NAME=backups
AZURE_STORAGE_TIER=Hot
AZURE_ENCRYPTION_SCOPE=

# Cloud Storage - Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json
GCS_BUCKET_NAME=your-backup-bucket
GCS_STORAGE_CLASS=STANDARD
GCS_ENCRYPTION_KEY=

# FTP/SFTP Configuration
FTP_HOST=ftp.example.com
FTP_PORT=21
FTP_USERNAME=backup_user
FTP_PASSWORD=backup_password
FTP_USE_TLS=true

SFTP_HOST=sftp.example.com
SFTP_PORT=22
SFTP_USERNAME=backup_user
SFTP_PRIVATE_KEY_PATH=./ssh_key
SFTP_KNOWN_HOSTS_PATH=./known_hosts

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/backup.log
AUDIT_LOG_ENABLED=true
MAX_LOG_SIZE=100MB
LOG_RETENTION_DAYS=30
BACKUP_OPERATION_LOG=true

# Database Configuration (for metadata)
DATABASE_URL=sqlite:///./backup.db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Notification Configuration
NOTIFICATION_ENABLED=true
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=notifications@example.com
EMAIL_PASSWORD=email_password
WEBHOOK_URL=https://yourapp.com/webhook/backup

# Schedule Configuration
SCHEDULER_ENABLED=true
MAX_SCHEDULED_JOBS=100
SCHEDULE_CHECK_INTERVAL=60
TIMEZONE=UTC

# Retention and Cleanup
AUTO_CLEANUP_ENABLED=true
CLEANUP_INTERVAL_HOURS=24
RETENTION_CHECK_ENABLED=true
COMPRESSION_CLEANUP_ENABLED=true

# Development
DEBUG=false
TEST_MODE=false
MOCK_CLOUD_STORAGE=false
ENABLE_SWAGGER_UI=true
ENABLE_RELOAD=true
