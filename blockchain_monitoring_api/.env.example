# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# Blockchain API Keys
ETHERSCAN_API_KEY=your-etherscan-api-key
BLOCKCHAIN_API_KEY=your-blockchain-info-key
POLYGONSCAN_API_KEY=your-polygonscan-key

# Monitoring Configuration
MONITORING_INTERVAL=60
MAX_TRANSACTIONS_PER_QUERY=1000
ALERT_CHECK_INTERVAL=30

# Database (for persistence)
DATABASE_URL=sqlite:///./blockchain_monitor.db

# Alert Thresholds
DEFAULT_LARGE_TRANSACTION_THRESHOLD=10.0
SUSPICIOUS_FREQUENCY_THRESHOLD=5
SUSPICIOUS_TIME_WINDOW_HOURS=1

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# WebSocket Settings
ENABLE_WEBSOCKETS=true
WEBSOCKET_PORT=8001
