# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/ecommerce_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ecommerce_db
DATABASE_USER=user
DATABASE_PASSWORD=password

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
ENABLE_STRIPE_WEBHOOKS=false

# Tax Configuration
TAX_RATE=0.08
SHIPPING_RATE=9.99
FREE_SHIPPING_THRESHOLD=100.00

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
IMAGE_QUALITY=85
THUMBNAIL_SIZE=300,300

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourstore.com
ENABLE_EMAIL_NOTIFICATIONS=true

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ORDERS=10
RATE_LIMIT_PAYMENTS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ecommerce_api.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security
ENABLE_HTTPS=false
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900

# Analytics
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
ENABLE_PROMETHEUS=true
METRICS_PORT=8010

# Business Settings
STORE_NAME=Your Store
STORE_EMAIL=contact@yourstore.com
STORE_PHONE=+1-555-0123
STORE_ADDRESS=123 Store St, City, Country
CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD

# Inventory Management
LOW_STOCK_THRESHOLD=10
OUT_OF_STOCK_ACTION=hide_product
INVENTORY_TRACKING=true
ALLOW_BACKORDERS=false

# Order Processing
AUTO_CONFIRM_ORDERS=false
AUTO_GENERATE_INVOICES=true
ORDER_NUMBER_PREFIX=ORD-
ORDER_RETENTION_DAYS=365

# Payment Settings
ALLOW_PARTIAL_PAYMENTS=false
PAYMENT_TIMEOUT=1800
REFUND_WINDOW_DAYS=30
MIN_ORDER_AMOUNT=1.00

# Search Configuration
SEARCH_RESULTS_PER_PAGE=20
MAX_SEARCH_RESULTS=1000
ENABLE_FUZZY_SEARCH=true
SEARCH_INDEX_REFRESH_INTERVAL=3600
