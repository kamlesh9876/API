# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=*

# Drone Settings
MAX_DRONES=100
DEFAULT_MAX_ALTITUDE=120
DEFAULT_MAX_DISTANCE=1000
DEFAULT_MAX_SPEED=15
MAX_FLIGHT_ALTITUDE=400

# Safety Settings
LOW_BATTERY_THRESHOLD=20
CRITICAL_BATTERY_THRESHOLD=5
EMERGENCY_LANDING_ALTITUDE=5
SIGNAL_LOSS_TIMEOUT=30

# WebSocket Settings
WEBSOCKET_HEARTBEAT_INTERVAL=30
MAX_WEBSOCKET_CONNECTIONS=1000
TELEMETRY_UPDATE_RATE=10

# Geofencing
ENABLE_NO_FLY_ZONES=true
DEFAULT_NO_FLY_ZONE_RADIUS=500
AIRPORT_RESTRICTION_RADIUS=5000

# Database (for persistence)
DATABASE_URL=sqlite:///./drone_control.db
FLIGHT_LOG_RETENTION_DAYS=90

# Logging
LOG_LEVEL=info
ENABLE_FLIGHT_LOGGING=true
ENABLE_COMMAND_LOGGING=true

# Authentication
API_KEY_REQUIRED=false
DRONE_AUTHENTICATION=true
COMMAND_AUTHORIZATION=true

# External Services
WEATHER_API_KEY=your-weather-api-key
AIR_TRAFFIC_API_KEY=your-atc-api-key

# Performance
ENABLE_CACHING=true
CACHE_TTL=300
MAX_CONCURRENT_FLIGHTS=10
